<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">
    
    <androidx.cardview.widget.CardView
        android:layout_marginTop="8dp"
        app:cardCornerRadius="42dp"
        android:backgroundTint="#F9F4F4"
        android:layout_width="386dp"
        android:layout_height="152dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:padding="4dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:weightSum="1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_num_1"
                    android:layout_weight="0.1"
                    android:textColor="#6E6A6A"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_operation"
                    android:layout_weight="0.1"
                    android:textColor="#6E6A6A"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_num_2"
                    android:layout_weight="0.1"
                    android:textColor="#6E6A6A"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_result"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="#707070"
                android:textSize="46sp"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="3dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_clear"
                android:layout_gravity="center_vertical"
                android:text="C"
                android:textSize="46sp"
                android:textColor="#FE6500"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_del"
                android:layout_gravity="center_vertical"
                android:text="Del"
                android:textSize="16sp"
                android:textColor="#FE6500"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_percent"
                android:layout_gravity="center_vertical"
                android:text="%"
                android:textSize="46sp"
                android:textColor="#FE6500"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_divide"
                android:layout_gravity="center_vertical"
                android:text="/"
                android:textSize="46sp"
                android:textColor="#FE6500"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
        </LinearLayout>
        <LinearLayout

            android:padding="3dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_num_7"
                android:layout_gravity="center_vertical"
                android:text="7"
                android:textSize="46sp"
                android:textColor="#707070"
                android:backgroundTint="@color/white"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_num_8"
                android:layout_gravity="center_vertical"
                android:text="8"
                android:textSize="46sp"
                android:textColor="#707070"
                android:backgroundTint="@color/white"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_num_9"
                android:layout_gravity="center_vertical"
                android:text="9"
                android:textSize="46sp"
                android:textColor="#707070"
                android:backgroundTint="@color/white"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_multiply"
                android:layout_gravity="center_vertical"
                android:text="*"
                android:textSize="46sp"
                android:textColor="#FE6500"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
        </LinearLayout>
        <LinearLayout
            android:padding="3dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_num_4"
                android:layout_gravity="center_vertical"
                android:text="4"
                android:textSize="46sp"
                android:textColor="#707070"
                android:backgroundTint="@color/white"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_num_5"
                android:layout_gravity="center_vertical"
                android:text="5"
                android:textSize="46sp"
                android:textColor="#707070"
                android:backgroundTint="@color/white"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_num_6"
                android:layout_gravity="center_vertical"
                android:text="6"
                android:textSize="46sp"
                android:textColor="#707070"
                android:backgroundTint="@color/white"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_sub"
                android:layout_gravity="center_vertical"
                android:text="-"
                android:textSize="46sp"
                android:textColor="#FE6500"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
        </LinearLayout>
        <LinearLayout
            android:padding="3dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_num_1"
                android:layout_gravity="center_vertical"
                android:text="1"
                android:textSize="46sp"
                android:textColor="#707070"
                android:backgroundTint="@color/white"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_num_2"
                android:layout_gravity="center_vertical"
                android:text="2"
                android:textSize="46sp"
                android:textColor="#707070"
                android:backgroundTint="@color/white"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_num_3"
                android:layout_gravity="center_vertical"
                android:text="3"
                android:textSize="46sp"
                android:textColor="#707070"
                android:backgroundTint="@color/white"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_sum"
                android:layout_gravity="center_vertical"
                android:text="+"
                android:textSize="46sp"
                android:textColor="#FE6500"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
        </LinearLayout>
        <LinearLayout
            android:padding="3dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_close"
                android:layout_gravity="center_vertical"
                android:text="close"
                android:backgroundTint="#FE6500"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_num_0"
                android:layout_gravity="center_vertical"
                android:text="0"
                android:textSize="46sp"
                android:textColor="#707070"
                android:backgroundTint="@color/white"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_decimal_sign"
                android:layout_gravity="center_vertical"
                android:text="."
                android:textSize="46sp"
                android:textColor="#707070"
                android:backgroundTint="@color/white"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
            <Button
                android:id="@+id/btn_equal"
                android:layout_gravity="center_vertical"
                android:text="="
                android:backgroundTint="#FE6500"
                android:textSize="46sp"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:layout_width="86dp"
                android:layout_height="86dp"/>
        </LinearLayout>


    </LinearLayout>
    

</LinearLayout>